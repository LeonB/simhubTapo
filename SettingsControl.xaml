<UserControl x:Class="LeonB.Tapo.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeonB.Tapo"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins" mc:Ignorable="d" 
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins" 
             d:DesignHeight="300" d:DesignWidth="300">

    <ScrollViewer>
        <Grid>
            <StackPanel>
                <styles:SHSubSection Title="Login Credentials">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label>User:</Label>
                            <TextBox Name="tbUser" TextChanged="tbUser_TextChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label>Password:</Label>
                            <PasswordBox  Name="tbPassword" PasswordChanged="tbPassword_PasswordChanged"/>
                        </StackPanel>
                    </StackPanel>
                </styles:SHSubSection>

                <StackPanel>
                    <styles:SHButtonPrimary HorizontalAlignment="Right">Add Device</styles:SHButtonPrimary>
                </StackPanel>

                <styles:SHSubSection Title="Devices">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="200">IP:</Label>
                            <TextBox Name="tbIP" TextChanged="tbIP_TextChanged" Width="200"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <Label Width="200">On Startup:</Label>
                            <ComboBox Name="cbOnStartup" Width="200">
                                <ComboBoxItem IsSelected="True"></ComboBoxItem>
                                <ComboBoxItem>On</ComboBoxItem>
                                <ComboBoxItem>Off</ComboBoxItem>
                                <ComboBoxItem>Toggle</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label Width="200">On Shutdown:</Label>
                            <ComboBox Name="cbOnShutdown" Width="200">
                                <ComboBoxItem IsSelected="True"></ComboBoxItem>
                                <ComboBoxItem>On</ComboBoxItem>
                                <ComboBoxItem>Off</ComboBoxItem>
                                <ComboBoxItem>Toggle</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </styles:SHSubSection>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
